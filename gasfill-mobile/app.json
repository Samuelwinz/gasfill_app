{
  "expo": {
    "name": "GasFill",
    "slug": "gasfill-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b5ed7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gasfill.mobile",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "whatsapp",
          "tel",
          "mailto",
          "maps",
          "comgooglemaps"
        ],
        "NSLocationWhenInUseUsageDescription": "GasFill needs your location to show delivery address and track orders.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "GasFill needs background location access to provide real-time delivery tracking.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b5ed7"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.gasfill.mobile",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "apiUrl": "http://localhost:8000"
    },
    "plugins": [
      "expo-web-browser"
    ]
  }
}
